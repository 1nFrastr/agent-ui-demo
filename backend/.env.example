# FastAPI Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# CORS Configuration  
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Google Search Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here

# Tavily Search Configuration (AI-optimized search)
TAVILY_API_KEY=your_tavily_api_key_here

# SerpAPI Configuration (Alternative search engine)
SERPAPI_API_KEY=your_serpapi_api_key_here

# Database Configuration (Optional - for session storage)
# DATABASE_URL=sqlite:///./data/agent_chat.db

# Security Configuration
SECRET_KEY=your_secret_key_here_please_change_in_production

# API Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5